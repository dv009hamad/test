<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent">
  
  <Button android:id="@+id/dialogButton"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:text="通常"/>
   
   <Button android:id="@+id/textDialogButton"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:text="テキスト"/>
   
   <Button android:id="@+id/singleSelectDialogButton"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:text="単一選択"/>
      
   <Button android:id="@+id/datePickerDialogButton"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:text="日付選択"/>
      
   <Button android:id="@+id/timePickerDialogButton"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:text="時間選択"/>
      
   <Button android:id="@+id/progressDialogButton"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:text="プログレスバー"/>
      
   <TextView 
      android:id="@+id/label_dialogtext"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"/>

   <ListView
       android:id="@+id/listView1"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:entries="@array/listArray" >
   </ListView>
  
</LinearLayout>
